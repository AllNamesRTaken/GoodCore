{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": true,
    "noResolve": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "listFiles": false,
    "listEmittedFiles": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
    "lib": ["dom", "ES2021", "ES2021.Promise", "ES2021.String", "scripthost"]
  },
  "include": ["./src/**/*.ts", "./src/test/**/*.ts", "./typings/**/*.d.ts"],
  "exclude": []
}
