{
    "compilerOptions": {
	    "rootDir": "./src",
		"outDir": "./dist",
	    "sourceMap": true,
	    "target": "es5",
	    "module": "es2015",
	    "moduleResolution": "node",
	    "declaration": false,
	    "noImplicitAny": true,
		"noImplicitThis": false,
		"strictNullChecks": true,
	    "noResolve": false,
	    "removeComments": true,
	    "noLib": false,
	    "preserveConstEnums": true,
		"emitDecoratorMetadata": true,
	    "experimentalDecorators": true,
	    "allowJs": false,
		"listFiles": false,
		"downlevelIteration": false,
		"lib": [
			"es2015.symbol.wellknown",
			"dom",
			"es5",
			"es6",
            "es2015.promise",
			"scripthost"
        ]
    },
	"include": [
		"./src/**/*.ts",
		"./typings/**/*.d.ts"
	],
	"exclude": [
		"**/__tests__/**/*.ts",
		"./src/lib/wip/**/*.ts"
	]
}