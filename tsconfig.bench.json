{
    "compilerOptions": {
	    "rootDir": "./src",
		"outDir": "./dist",
	    "sourceMap": false,
	    "target": "es6",
	    "module": "es2015",
	    "moduleResolution": "node",
	    "declaration": false,
	    "noImplicitAny": true,
	    "noResolve": false,
	    "removeComments": true,
	    "noLib": false,
	    "emitDecoratorMetadata": true,
	    "experimentalDecorators": true,
	    "preserveConstEnums": true,
		"allowJs": false,
		"listFiles": false,
		"listEmittedFiles": false,
		"lib": [
            "dom",
            "es6",
            "es2015.promise",
			"scripthost"
		],
		"types": [
			"node"
		]
    },
	"include": [
		"./src/benchmark/**/*.ts",
		"./typings/**/*.d.ts"
	],
	"exclude": [
		"./src/test/**/*.ts",
		"./src/lib/wip/**/*.ts"
	]
}