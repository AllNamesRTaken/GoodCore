{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "target": "ES2021",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": false,
    "emitDeclarationOnly": false,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "noResolve": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "listFiles": false,
    "downlevelIteration": false,
		"esModuleInterop": true,
    "lib": ["dom", "ES2021", "ES2021.Promise", "ES2021.String", "scripthost"],
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "."
  },
  "include": [
    // "./test.ts",
    "./src/**/*.ts",
  ],
  "exclude": ["./src/lib/wip", "./src/__tests__", "./src/benchmark"]
}
