{
    "compilerOptions": {
	    "rootDir": "./src",
		"outDir": "./dist",
	    "sourceMap": true,
	    "target": "es5",
	    "module": "es2015",
	    "moduleResolution": "node",
	    "declaration": true,
	    "noImplicitAny": true,
	    "noResolve": false,
	    "removeComments": true,
	    "noLib": false,
	    "emitDecoratorMetadata": true,
	    "experimentalDecorators": true,
	    "preserveConstEnums": true,
		"allowJs": false,
		"listFiles": false,
		"strictNullChecks": true,
		"lib": [
            "dom",
            "es2015",
            "es2015.promise",
			"scripthost"
        ]
    },
	"include": [
		"./src/**/*.ts",
		"./typings/**/*.d.ts"
	],
	"exclude": [
		"./src/test/**/*.ts"
	]
}